<resources>
    <!-- Base application theme. -->
    <style name="Theme.STF" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_shade_2</item>
    </style>

    <!-- dark mode -->
    <!-- Screen background if dark mode on -->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Status bar background if dark mode on -->
    <style name="STATUS_BAR">
        <item name="android:background">@drawable/status_bar_dark</item>
    </style>

    <!-- Block screen background if dark mode on -->
    <style name="BLOCK_SCREEN">
        <item name="android:background">@drawable/linearlayout_dark_drawable</item>
    </style>

    <!-- Block screen with status bar background if dark mode on -->
    <style name="BLOCK_SCREEN_WITH_STATUS_BAR">
        <item name="android:background">@drawable/rounded_block_screen_dark_drawable</item>
    </style>

    <!-- Settings icon in login screen background if dark mode on -->
    <style name="LOGIN_SETTINGS">
        <item name="android:background">@drawable/login_screen_settings_dark</item>
    </style>

    <!-- Headline texts background if dark mode on -->
    <style name="HEADLINE_TEXT">
        <item name="android:textColor">@color/blue_shade_4</item>
    </style>

    <!-- Texts background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- link to button background if dark mode on -->
    <style name="LINK_TO_TEXT">
        <item name="android:textColor">@color/blue_shade_2</item>
    </style>

    <!-- Edit texts background if dark mode on -->
    <style name="EDIT_TEXT">
        <item name="android:background">@drawable/edittext_dark_background</item>
    </style>

    <!-- Profile pic circle background if dark mode on -->
    <style name="PROFILE_PIC_CIRCLE">
        <item name="android:background">@drawable/profile_pic_dark_circle_drawable</item>
    </style>

    <!-- Send message edit texts background if dark mode on -->
    <style name="SEND_MESSAGE_EDIT_TEXT">
        <item name="android:background">@drawable/send_message_edit_text_dark</item>
    </style>

    <!-- Send message edit texts background if dark mode on -->
    <style name="SEND_MESSAGE_EDIT_TEXT_BACKGROUND">
        <item name="android:background">@color/background_dark_gray</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:background">@drawable/rounded_button_dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FLOATING_ACTION_BUTTON">
        <item name="android:background">@color/blue_shade_4</item>
        <item name="android:backgroundTint">@color/blue_shade_4</item>
    </style>

    <!-- Choose file button background if dark mode on -->
    <style name="CHOOSE_FILE_BUTTON">
        <item name="android:background">@drawable/edittext_dark_background</item>
    </style>

    <!-- Notification background if dark mode on -->
    <style name="NOTIFICATION">
        <item name="android:background">@drawable/notification_circke_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Date bubble background if dark mode on -->
    <style name="DATE_BUBBLE">
        <item name="android:background">@drawable/chat_date_bubble_dark_drawable</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Contact message bubble background if dark mode on -->
    <style name="CONTACT_BUBBLE">
        <item name="android:background">@drawable/contact_text_bubble_dark_drawable</item>
    </style>

    <!-- my message bubble background if dark mode on -->
    <style name="MY_BUBBLE">
        <item name="android:background">@drawable/my_text_bubble_dark_drawable</item>
    </style>

    <!-- Profile pic circle border if light mode on -->
    <style name="PROFILE_PIC_BORDER">
        <item name="android:background">@drawable/circle_border_dark</item>
    </style>

    <style name="INVALID_EDIT_TEXT">
        <item name="android:background">@drawable/invalid_edit_text_dark</item>
    </style>

</resources>