<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- The bottom border shape -->
    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set the background color to transparent -->
            <stroke
                android:color="@color/edit_text_gray"
                android:width="2dp" /> <!-- Set the width of the bottom border -->
        </shape>
    </item>
</layer-list>
