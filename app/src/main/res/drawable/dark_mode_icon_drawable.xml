<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded square background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_shade_6" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Icon drawable -->
    <item
        android:drawable="@drawable/dark_mode_icon"
        android:width="15dp"
        android:height="15dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp"
        android:gravity="center" />
</layer-list>
